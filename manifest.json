{
    "manifest_version": 2,
    "name": "HyText",
    "version": "1.0",

    "description": "Մենք կօգնենք ավելի անսխալ գրել",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "author": ["Ashot Janibekyan", "Elen Gabrielyan", "Marianna Perikhanyan", "Rozi Tunyan"],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [{
        "all_frames": true,
        "js": ["randerData.js"],
        "matches":  ["http://*/*", "https://*/*"]
    }],
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://hy.wiktionary.org https://translate.google.com https://query.yahooapis.com; object-src 'self'",
    "permissions": [
        "https://hy.wiktionary.org/*",
        "http://*/*",
        "https://*/*",
        "tabs",
        "contextMenus",
        "webRequestBlocking",
        "unlimitedStorage"
    ],
    "short_name": "ImTranslator"
}